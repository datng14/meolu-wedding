rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to rsvps collection
    match /rsvps/{rsvpId} {
      allow read, write: if true;
    }

    // Allow read/write access to guestbook collection
    match /guestbook/{messageId} {
      allow read, write: if true;
    }
  }
}

